{
  "name": "electrs-batch-server",
  "version": "1.0.4",
  "description": "Electrs middleware server for batch API calls",
  "author": "Liquality <info@liquality.io>",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "electrs-batch-server": "./bin/electrs-batch-server"
  },
  "scripts": {
    "test": "standard",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,app,libs,test}/**/*.ts\" --fix",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check",
    "build:watch": "tsc --watch",
    "build:run": "nodemon dist/app.js",
    "start:dev": "npm run build && cross-env NODE_ENV=development concurrently \"npm run build:watch\" \"npm run build:run\"",
    "start:prod": "cross-env NODE_ENV=production node dist/app.js",
    "start": "cross-env NODE_ENV=development node dist/app.js",
    "docker:build-local": "docker build -t electrs-batch-api . --no-cache",
    "docker:run-local": "docker run --rm --name electrs-batch-api -p 9090:9090 --env-file .env.docker.local -d -it electrs-batch-api:latest",
    "docker:stop-local": "docker stop electrs-batch-api",
    "docker:log-local": "docker container logs -t electrs-batch-api",
    "flint": "npm run lint --fix",
    "precommit-message-lint": "printf '\nPre-commit checks (linting)...\n' && exit 0"
  },
  "pre-commit": [
    "precommit-message-lint",
    "lint"
  ],
  "dependencies": {
    "@sentry/node": "^5.22.3",
    "@sentry/tracing": "^6.17.3",
    "axios": "^0.25.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "concurrently": "^7.0.0",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.2",
    "express-async-handler": "^1.1.4",
    "express-session": "^1.17.2",
    "helmet": "^5.0.1",
    "http-errors": "^1.8.0",
    "ioredis": "^4.28.5",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/ioredis": "^4.28.8",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.6.0",
    "pre-commit": "1.2.2",
    "rimraf": "^3.0.2",
    "standard": "^16.0.4"
  }
}
